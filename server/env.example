# SSL Configuration
TIMEWEB_DB_SSL=true
TIMEWEB_DB_SSL_CERT=./ca.crt
TIMEWEB_DB_SSL_MODE=verify-full
# Или через переменную окружения:
# PGSSLROOTCERT=$HOME/.cloud-certs/root.crt

# Server Configuration
PORT=3001
NODE_ENV=production

# JWT Configuration
# ВАЖНО: Используйте случайную строку минимум 32 символа
# Генерация: openssl rand -base64 32
JWT_SECRET=your-very-secret-jwt-key-min-32-chars-change-this
JWT_EXPIRES_IN=7d

# CORS Configuration
# Разрешенные домены через запятую (добавьте ваш фронтенд домен на Timeweb)
ALLOWED_ORIGINS=https://your-frontend-domain.twc1.net,https://www.your-frontend-domain.twc1.net

# Frontend URL (опционально, для упрощения CORS если фронт и бэк на одном домене)
